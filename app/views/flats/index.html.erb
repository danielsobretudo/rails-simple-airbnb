<%= render "navbar" %>

<div class="container">
  <h3>All our Flats (<%= Flat.count %>)</h3>
  <div class="row">

    <% @flats.each do |flat| %>
      <div class="col p-3">
        <div class="card" style="width: 18rem;">
          <img src="..." class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.address %></p>
            <i class="fas fa-users"></i><%= flat.number_of_guests %>
            <i class="fas fa-euro-sign"></i><%= flat.price_per_night %>
          </div>
          <hr>
          <div class="card-body">
            <%= link_to "More Info", flat_path(flat.id) %>
            <%= link_to "Edit", edit_flat_path(flat.id) %>
            <%= link_to "Remove", flat_path(flat.id),
                        method: :delete,
                        data: { confirm: "Are you sure?" } %>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>
